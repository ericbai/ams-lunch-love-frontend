<section class='login-container'>
    <div class='login-logo'>
        <img src='images/logo.png' />
        <h3>Welcome Back to the <span class="glyphicon glyphicon-heart"></span></h3>
    </div>
    <div class="login-content">
        <form {{action "login" email password on="submit"}}>
            <div class="form-group">
                <label for="Email">Email</label>
                {{input-mask mask="email" placeholder="Email" value=email autocorrect="off" autocapitalize="off" class="form-control"}}
            </div>
            <div class="form-group">
                <label for="Password">Password</label>
                {{input value=password type="password" placeholder="Password" class="form-control"}}
            </div>
            <a href="#" class="help-block" tabindex='-1' {{action 'renderModal' 'modals/forgot-password' this}}>Forgot Password?</a>
            <div class="text-center">
                <button type="submit" class="btn btn-danger">Log in</button>
            </div>
        </form>
    </div>
</section>
